<Page x:Class="TestPassModule.ModuleLine.Selector.ModuleItemPicker"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestPassModule.ModuleLine.Selector"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ModuleItemPicker">

    <Grid>
        <StackPanel Margin="15">
            <TextBlock Text="Relative Modules"
                       Foreground="#9c27b0"
                       FontSize="17" />
            <StackPanel x:Name="RelativeContainer"
                        Margin="15,5,15,20" />
            <TextBlock Text="Current Modules"
                       Foreground="#2196f3"
                       FontSize="17" />
            <StackPanel x:Name="CurrentContainer"
                        Margin="15,5,15,20" />

            <TextBlock Text="Diagram Modules"
                       Foreground="#4caf50" FontSize="17" />
            <StackPanel x:Name="Container" Margin="15,5,15,20" />
            <TextBlock Text="Project Modules" 
                       Foreground="#707070"
                       FontSize="17" />
            <StackPanel x:Name="ProjectContainer" Margin="15,5,15,20" />
        </StackPanel>
    </Grid>
</Page>
