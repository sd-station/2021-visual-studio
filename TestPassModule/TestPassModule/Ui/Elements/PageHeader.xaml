<UserControl x:Class="TestPassModel.Ui.Elements.PageHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestPassModel.Ui.Elements"
             mc:Ignorable="d" Foreground="#cfcfcf" x:Name="El"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="/Ui/dic/dic-icon-btn.xaml" />
    </UserControl.Resources>
    <Grid>
        <Border BorderThickness="0,0,0,1"
                    BorderBrush="#707070"
                    Background="#212121" />

        <TextBlock Text="Page Title 1" x:Name="txtTitle"
                       Padding="10,0"
                       VerticalAlignment="Center" />


        <Button HorizontalAlignment="Right"
                    Style="{StaticResource icon-btn}"
                    VerticalAlignment="Center"
                    Height="28"
                    Width="28"
                    Margin="10,0"
                    Click="BtnSave_Click">
            <Path Stretch="Uniform"
                      Data="M17,3H3v18h18V7L17,3z M12,19c-1.66,0-3-1.34-3-3s1.34-3,3-3s3,1.34,3,3S13.66,19,12,19z M15,9H5V5h10V9z" />
        </Button>
    </Grid>
</UserControl>
