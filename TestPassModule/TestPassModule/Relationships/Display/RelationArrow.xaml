                <Path Stretch="Fill"
                      Grid.Row="1"
                      HorizontalAlignment="Left"
                      Fill="{Binding ElementName=El, Path=BorderBrush}"
                      x:Name="Lhead"
                      Height="20"
                      Width="30"
                      Data="M 100,300 L 300,100 240,300 300,500 Z" />
                <Path Stretch="Fill"
                      x:Name="Rhead"
                      Grid.Row="1"
                      HorizontalAlignment="Right"
                      Fill="{Binding ElementName=El, Path=BorderBrush}"
                      Height="20"
                      Width="30"
                      Data="M 300,300 L 100,100 160,300 100,500 Z" />

            </Grid>













