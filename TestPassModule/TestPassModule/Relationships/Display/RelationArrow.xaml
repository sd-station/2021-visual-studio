                       x:Name="NoteBox"
                       Padding="5,0"
                       Foreground="{Binding ElementName=El, Path=Foreground}"
                       VerticalAlignment="Bottom"
                       Margin="0,30,0,0"
                       TextAlignment="Center" ClipToBounds="True"
                       FontSize="14">
                  <Run x:Name="txtTitle"
                       Text="Untitled Connection" />
            </TextBlock>


